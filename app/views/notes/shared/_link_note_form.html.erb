<%= content_for :head do %>
  <%= stylesheet_link_tag 'linker', 'data-turbo-track': 'reload' %>
<% end %>
<div class="note-linker">
  <%= form_with url: get_notes_by_title_url(title_query: ''), method: :get do |f| %>
    <%= f.label :title_query, 'TÃ­tulo:'%>
    <%= f.text_field :title_query %>
    <%= f.submit 'Buscar' %>
  <% end %>
  <%= form_with url: link_note_path(id: params[:id]), method: :post do |f| %>
