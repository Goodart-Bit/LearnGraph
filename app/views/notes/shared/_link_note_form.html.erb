    <%= form_with url: new_edge_url(pointer_index), method: :get do |f| %>
      <%= f.hidden_field :note_id, value: note.id %>
      <%= f.label :title_query, 'TÃ­tulo:'%>
      <%= f.text_field :title_query %>
      <%= f.submit 'Buscar' %>
    <% end %>
    <div id="filtered-notes"></div>
  <% end %>
<% end %>
<%= render "notes/shared/tool_window", class_list: ['note-linker'], caller_id: 'linker-window', tool_title: "Enlazar nota" %>